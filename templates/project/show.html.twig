{% extends 'base.html.twig' %}

{% block title %}Détail - {{ project.title }} - {{ project.customer.name }}{% endblock %}

{% block page_header %}
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="h4 mb-0 pe-3">Détail - {{ project.title }} - {{ project.customer.name }}</h1>
        <div class="d-flex align-items-center gap-3">
            <a href="{{ path('app_project_edit', { id: project.id }) }}"
               class="btn btn-sm btn-outline-primary">Modifier</a>
            <a href="{{ path('app_gamme_project_file', { id: project.id }) }}"
               class="btn btn-sm btn-outline-warning">Gamme</a>
            <a href="{{ path('app_project_archive', { id: project.id }) }}" class="btn btn-sm btn-outline-secondary">
                {{ project.isArchived ? 'Désarchiver' : 'Archiver' }}
            </a>
            <input type="date"
                   class="form-control form-control-sm"
                   id="deadlineInput"
                   value="{{ project.deadline ? project.deadline|date('Y-m-d') : '' }}"
                   data-id="{{ project.id }}">
        </div>
        <div class="d-flex align-items-center ps-3 gap-3">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="deleteOrphansCheckbox">
                <label class="form-check-label small" for="deleteOrphansCheckbox">Supprimer les orphelins</label>
            </div>
            <button id="resyncFoldersBtn" class="btn btn-sm btn-outline-secondary" title="Re-synchroniser les dossiers">
                <i class="fa-solid fa-retweet"></i>
            </button>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row g-4">
        {# Carte devis #}
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body position-relative">
                    <h5 class="card-title">Devis</h5>

                    {% if project.quoteLink %}
                        <embed src="{{ path('project_file_download', { id: project.id, type: 'quote' }) }}" width="100%" height="400px" />
                    {% else %}
                        <div class="alert alert-secondary text-center">Aucun fichier actuellement.</div>
                    {% endif %}

                    <div class="mt-3 d-flex gap-2">
                        <a class="btn btn-sm btn-outline-secondary {{ not project.quoteLink ? 'disabled' }}" target="_blank"
                           href="{{ path('project_file_download', { id: project.id, type: 'quote' }) }}">
                            <i class="fa-solid fa-eye"></i>
                        </a>

                        <button class="btn btn-sm btn-outline-primary" onclick="triggerFileUpload('quote')">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </button>

                        <button class="btn btn-sm btn-outline-danger {{ not project.quoteLink ? 'disabled' }}"
                                onclick="deleteProjectFile({{ project.id }}, 'quote')">
                            <i class="fa-solid fa-trash"></i>
                        </button>

                        <input type="file" id="uploadInputQuote" data-id="{{ project.id }}"
                               style="display:none;" onchange="uploadProjectFile(this, 'quote')"/>
                    </div>
                </div>
            </div>
        </div>

        {# Carte spécifications #}
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body position-relative">
                    <h5 class="card-title">Cahier de charges</h5>

                    {% if project.specificationLink %}
                        <embed src="{{ path('project_file_download', { id: project.id, type: 'specification' }) }}" width="100%" height="400px" />
                    {% else %}
                        <div class="alert alert-secondary text-center">Aucun fichier actuellement.</div>
                    {% endif %}

                    <div class="mt-3 d-flex gap-2">
                        <a class="btn btn-sm btn-outline-secondary {{ not project.specificationLink ? 'disabled' }}" target="_blank"
                           href="{{ path('project_file_download', { id: project.id, type: 'specification' }) }}">
                            <i class="fa-solid fa-eye"></i>
                        </a>

                        <button class="btn btn-sm btn-outline-primary" onclick="triggerFileUpload('specification')">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </button>

                        <button class="btn btn-sm btn-outline-danger {{ not project.specificationLink ? 'disabled' }}"
                                onclick="deleteProjectFile({{ project.id }}, 'specification')">
                            <i class="fa-solid fa-trash"></i>
                        </button>

                        <input type="file" id="uploadInputSpecification" data-id="{{ project.id }}"
                               style="display:none;" onchange="uploadProjectFile(this, 'specification')"/>
                    </div>
                </div>
            </div>
        </div>
        {# Carte dossier client #}
        <div class="col-md-3">
            <div class="card h-100">
                <a href="{{ path('app_datas_list', {'id': project.id}) }}" class="text-decoration-none text-dark stretched-link"></a>
                <div class="card-header">Données client</div>
                <div class="card-body">
                    <div class="mb-2">
                        <label class="form-label">Lien dossier :</label>
                        <input type="text" class="form-control form-control-sm"
                               id="customerDataLinkInput"
                               data-id="{{ project.id }}"
                               value="{{ project.customerDataLink }}">
                    </div>
                    {% if customerDataDataset.error is defined %}
                        <div class="text-danger">{{ customerDataDataset.error }}</div>
                    {% else %}
                        <div class="text-muted small">{{ customerDataDataset.done }} / {{ customerDataDataset.total }}
                            traités
                        </div>
                        <div class="progress mt-2" style="height: 8px;">
                            <div class="progress-bar bg-success"
                                 style="width: {{ customerDataDataset.progress }}%;"></div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Carte dossier modèles #}
        <div class="col-md-3">
            <div class="card h-100">
                <a href="{{ path('app_model_list', {'id': project.id}) }}" class="text-decoration-none text-dark stretched-link"></a>
                <div class="card-header">Modèles</div>
                <div class="card-body">
                    <div class="mb-2">
                        <label class="form-label">Lien dossier :</label>
                        <input type="text" class="form-control form-control-sm"
                               id="modelLinkInput"
                               data-id="{{ project.id }}"
                               value="{{ project.modelLink }}">
                    </div>
                    <div class="text-muted small">{{ modelDataset.done }} / {{ modelDataset.total }} traités</div>
                    <div class="progress mt-2" style="height: 8px;">
                        <div class="progress-bar bg-info" style="width: {{ modelDataset.progress }}%;"></div>
                    </div>
                </div>
            </div>
        </div>
        {# Carte impression 3D #}
        <div class="col-md-3">
            <div class="card h-100">
                <a href="{{ path('app_print3d_list', {'id': project.id}) }}" class="text-decoration-none text-dark stretched-link"></a>
                <div class="card-header">Impression 3D</div>
                <div class="card-body">
                    {% if print3DDataset.error is defined %}
                        <div class="text-danger">{{ print3DDataset.error }}</div>
                    {% else %}
                        <div class="text-muted small">{{ print3DDataset.done }} / {{ print3DDataset.total }} imprimés
                        </div>
                        <div class="progress mt-2" style="height: 8px;">
                            <div class="progress-bar bg-warning" style="width: {{ print3DDataset.progress }}%;"></div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        {# Carte Post-traitement #}
        <div class="col-md-3">
            <div class="card h-100">
                <a href="{{ path('app_treatment_list', {'id': project.id}) }}" class="text-decoration-none text-dark stretched-link"></a>
                <div class="card-header">Post-Traitement</div>
                <div class="card-body">
                    {% if postTreatmentDataset.error is defined %}
                        <div class="text-danger">{{ postTreatmentDataset.error }}</div>
                    {% else %}
                        <div class="text-muted small">{{ postTreatmentDataset.done }}
                            / {{ postTreatmentDataset.total }} traités
                        </div>
                        <div class="progress mt-2" style="height: 8px;">
                            <div class="progress-bar bg-warning"
                                 style="width: {{ postTreatmentDataset.progress }}%;"></div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        {# Carte Finitions #}
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-header">Finition</div>
                <div class="card-body">
                    {% if finishDataSet.error is defined %}
                        <div class="text-danger">{{ finishDataSet.error }}</div>
                    {% else %}
                        <div class="text-muted small">{{ finishDataSet.done }} / {{ finishDataSet.total }} traités</div>
                        <div class="progress mt-2" style="height: 8px;">
                            <div class="progress-bar bg-warning" style="width: {{ finishDataSet.progress }}%;"></div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        {# Carte Assemblage #}
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-header">Assemblage</div>
                <div class="card-body">
                    {% if assemblyDataset.error is defined %}
                        <div class="text-danger">{{ assemblyDataset.error }}</div>
                    {% else %}
                        <div class="text-muted small">{{ assemblyDataset.done }} / {{ assemblyDataset.total }} assemblés</div>
                        <div class="progress mt-2" style="height: 8px;">
                            <div class="progress-bar bg-warning" style="width: {{ assemblyDataset.progress }}%;"></div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        {# Carte Contrôle Qualité #}
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-header">Contrôle qualité</div>
                <div class="card-body">
                    {% if qualityDataset.error is defined %}
                        <div class="text-danger">{{ qualityDataset.error }}</div>
                    {% else %}
                        <div class="text-muted small">{{ qualityDataset.done }} / {{ qualityDataset.total }} contrôlés</div>
                        <div class="progress mt-2" style="height: 8px;">
                            <div class="progress-bar bg-warning" style="width: {{ qualityDataset.progress }}%;"></div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Autres cartes #}
    </div>
{% endblock %}
