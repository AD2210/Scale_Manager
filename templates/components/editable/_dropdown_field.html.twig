<td>
    <div class="dropdown-multiselect" data-field="{{ id }}">
        <button type="button" class="btn btn-outline-secondary dropdown-toggle w-100" data-bs-toggle="dropdown" aria-expanded="false">
            {{ label }}
        </button>
        <ul class="dropdown-menu p-2" style="min-width: 200px;">
            {% for item in items %}
                <li>
                    <label class="form-check">
                        <input type="checkbox" class="form-check-input {{ name }}" value="{{ item.id }}">
                        {{ item.name }}
                    </label>
                </li>
            {% endfor %}
        </ul>
    </div>
</td>
