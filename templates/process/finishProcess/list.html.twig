{% extends 'components/_table_wrapper.html.twig' %}

{% set entityType = 'finish_process' %}

{% block title %}Liste des finitions{% endblock %}

{% block page_header %}
    <h1 class="h4 mb-0">Liste des finitions</h1>
{% endblock %}

{% block table_head %}
    <tr>
        <th class="col-6">Nom</th>
        <th class="col-2 text-center">Actif</th>
        {{ parent() }}
    </tr>
{% endblock %}

{% block table_add_form %}
    <tr class="bg-light border rounded shadow-sm align-middle">
        {% include 'components/_form_add_entity.html.twig' with {
            route: 'app_base_generic_create',
            route_parameters: { type: entityType },
            form_class: 'mt-2',
            fields: [
                { name: 'name', type: 'text', placeholder: 'Nom de la finition', required: true },
                { name: 'isActive', type: 'checkbox', value: false }
            ]
        } %}
    </tr>
{% endblock %}

{% block table_row_columns %}
    {% include 'components/editable/_text_cell.html.twig' with {
        entityId: item.id,
        entityType: entityType,
        field: 'name',
        value: item.name
    } %}

    {% include 'components/editable/_checkbox_cell.html.twig' with {
        entityId: item.id,
        entityType: entityType,
        field: 'isActive',
        value: item.isActive
    } %}
{% endblock %}
