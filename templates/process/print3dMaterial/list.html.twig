{% extends 'components/_table_wrapper.html.twig' %}

{% block title %}Liste Print 3D{% endblock %}

{% block page_header %}
    <h1 class="h4 mb-0">Liste des mat√©riaux Print3D</h1>
{% endblock %}

{% block table_head %}
    <tr>
        <th class="col-3">Nom</th>
        <th class="col-2 text-center">Actif</th>
        <th class="col-3">Traitement</th>
        <th class="col-3">Finition</th>
        <th class="col-1 text-center">Actions</th>
    </tr>
{% endblock %}

{% block table_add_form %}
    <tr class="bg-light border rounded shadow-sm align-middle">
        {% include 'components/_form_add_entity.html.twig' with {
            route: 'app_base_generic_create',
            route_parameters: { type: 'print3d_material' },
            form_class: 'mt-2',
            fields: [
                { name: 'name', type: 'text', placeholder: 'Nom du process', required: true },
                { name: 'isActive', type: 'checkbox', value: false },
                { name: 'treatmentProcess', type: 'select', label: 'Traitements', items: treatments },
                { name: 'finishProcess', type: 'select', label: 'Finitions', items: finishes },
            ]
        } %}
    </tr>
{% endblock %}

{% block table_rows %}
    {% for item in items %}
        <tr data-id="{{ item.id }}">
            {% include 'components/editable/_text_cell.html.twig' with {
                entityId: item.id,
                entityType: 'print3d_material',
                field: 'name',
                value: item.name
            } %}

            {% include 'components/editable/_checkbox_cell.html.twig' with {
                entityId: item.id,
                entityType: 'print3d_material',
                field: 'isActive',
                value: item.isActive
            } %}

            {% include 'components/editable/_dropdown_cell.html.twig' with {
                entityId: item.id,
                entityType: 'print3d_material',
                field: 'treatmentProcess',
                name: 'treatment-checkbox',
                value: item.treatmentProcess,
                items: treatments
            } %}

            {% include 'components/editable/_dropdown_cell.html.twig' with {
                entityId: item.id,
                entityType: 'print3d_material',
                field: 'finishProcess',
                name: 'finish-checkbox',
                value: item.finishProcess,
                items: finishes
            } %}

            {% include 'components/buttons/_delete_button.html.twig' %}
        </tr>
    {% endfor %}
{% endblock %}
